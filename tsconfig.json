{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "lib": [
        "es6", "DOM"
    ],
    "declaration": true,
    "removeComments": true,
    "stripInternal": true,
    "alwaysStrict": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "sourceMap": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}